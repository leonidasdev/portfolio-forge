# Portfolio Forge Environment Variables
# Copy this file to .env.local and fill in your values

# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key

# Groq AI Configuration
# Get API key from: https://console.groq.com/keys
GROQ_API_KEY=your_groq_api_key
GROQ_MODEL=llama-3.3-70b-versatile

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
# Enable/disable rate limiting globally
RATE_LIMIT_ENABLED=true

# Redis for production rate limiting (optional - uses in-memory if not set)
# Get from: https://upstash.com/
UPSTASH_REDIS_REST_URL=your_upstash_redis_url
UPSTASH_REDIS_REST_TOKEN=your_upstash_redis_token

# API rate limits (authenticated routes)
RATE_LIMIT_API_MAX=100
RATE_LIMIT_API_WINDOW=60

# Auth rate limits (login, signup - stricter)
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_AUTH_WINDOW=60

# AI rate limits (expensive operations - most strict)
RATE_LIMIT_AI_MAX=20
RATE_LIMIT_AI_WINDOW=60

# Public rate limits (unauthenticated routes)
RATE_LIMIT_PUBLIC_MAX=30
RATE_LIMIT_PUBLIC_WINDOW=60

# ============================================================================
# API Configuration
# ============================================================================
NEXT_PUBLIC_API_URL=/api/v1
API_TIMEOUT_MS=30000
API_MAX_BODY_SIZE=10485760

# ============================================================================
# Security Configuration
# ============================================================================
# Comma-separated list of allowed origins (* for all)
ALLOWED_ORIGINS=*
CORS_ENABLED=true
SESSION_EXPIRY_SECONDS=3600

# ============================================================================
# Feature Flags
# ============================================================================
FEATURE_AI_ENABLED=true
FEATURE_PUBLIC_PORTFOLIOS=true
FEATURE_FILE_UPLOADS=true

# ============================================================================
# Logging Configuration
# ============================================================================
# Options: debug, info, warn, error
LOG_LEVEL=info
LOG_TIMESTAMPS=true
# Set to true to log request/response bodies (NOT recommended in production)
LOG_BODIES=false