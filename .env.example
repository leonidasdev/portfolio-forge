# ============================================================================
# Portfolio Forge Environment Variables
# Copy this file to .env.local and fill in your values (do NOT commit secrets)
# ============================================================================

# ============================================================================
# Supabase Configuration
# Get these from: https://app.supabase.com/project/_/settings/api
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here

# ============================================================================
# Groq AI Configuration
# Get API key from: https://console.groq.com/keys
# Model: groq/compound (free tier)
# ============================================================================
GROQ_API_KEY=your_groq_api_key_here
GROQ_MODEL=groq/compound

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
RATE_LIMIT_ENABLED=true

# Upstash Redis (optional - leave blank to use in-memory fallback)
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# API rate limits (authenticated routes)
RATE_LIMIT_API_MAX=100
RATE_LIMIT_API_WINDOW=60

# Auth rate limits (login, signup)
RATE_LIMIT_AUTH_MAX=10
RATE_LIMIT_AUTH_WINDOW=60

# AI rate limits (expensive operations)
RATE_LIMIT_AI_MAX=20
RATE_LIMIT_AI_WINDOW=60

# Public rate limits (unauthenticated routes)
RATE_LIMIT_PUBLIC_MAX=30
RATE_LIMIT_PUBLIC_WINDOW=60

# ============================================================================
# API Configuration
# ============================================================================
NEXT_PUBLIC_API_URL=/api/v1
API_TIMEOUT_MS=30000
API_MAX_BODY_SIZE=10485760

# ============================================================================
# Security Configuration
# ============================================================================
ALLOWED_ORIGINS=*
CORS_ENABLED=true
SESSION_EXPIRY_SECONDS=3600

# ============================================================================
# Feature Flags
# ============================================================================
FEATURE_AI_ENABLED=true
FEATURE_PUBLIC_PORTFOLIOS=true
FEATURE_FILE_UPLOADS=true

# ============================================================================
# Logging Configuration
# ============================================================================
# Options: debug, info, warn, error
LOG_LEVEL=info
LOG_TIMESTAMPS=true
LOG_BODIES=false